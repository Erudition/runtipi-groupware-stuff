{
    "services": [
        {
            "name": "zammad-backup",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-backup"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-backup",
                    "containerPath": "/var/tmp/zammad",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                },
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": true,
                    "shared": false,
                    "private": false
                }
            ],
            "user": "0:0",
            "dependsOn": {
                "zammad-memcached": {
                    "condition": "service_started"
                },
                "zammad-postgresql": {
                    "condition": "service_started"
                },
                "zammad-redis": {
                    "condition": "service_started"
                }
            }
        },
        {
            "name": "zammad-elasticsearch",
            "image": "bitnami/elasticsearch:8.18.0",
            "environment": {
                "ELASTICSEARCH_ENABLE_SECURITY": "true",
                "ELASTICSEARCH_SKIP_TRANSPORT_TLS": "true",
                "ELASTICSEARCH_ENABLE_REST_TLS": "false",
                "ELASTICSEARCH_PASSWORD": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./elasticsearch-data",
                    "containerPath": "/bitnami/elasticsearch/data",
                    "readOnly": true,
                    "shared": false,
                    "private": false
                }
            ]
        },
        {
            "name": "zammad-init",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-init"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ],
            "user": "0:0",
            "dependsOn": {
                "zammad-postgresql": {
                    "condition": "service_started"
                }
            }
        },
        {
            "name": "zammad-memcached",
            "image": "memcached:1.6.38-alpine",
            "command": "memcached -m 256M"
        },
        {
            "name": "zammad-nginx",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-nginx"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ],
            "dependsOn": {
                "zammad-railsserver": {
                    "condition": "service_started"
                }
            }
        },
        {
            "name": "zammad-postgresql",
            "image": "postgres:17.5-alpine",
            "environment": {
                "POSTGRES_DB": "zammad_production",
                "POSTGRES_USER": "zammad",
                "POSTGRES_PASSWORD": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./postgresql-data",
                    "containerPath": "/var/lib/postgresql/data",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ]
        },
        {
            "name": "zammad-railsserver",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-railsserver"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ],
            "dependsOn": {
                "zammad-memcached": {
                    "condition": "service_started"
                },
                "zammad-postgresql": {
                    "condition": "service_started"
                },
                "zammad-redis": {
                    "condition": "service_started"
                }
            }
        },
        {
            "name": "zammad-redis",
            "image": "redis:7.4.4-alpine",
            "volumes": [
                {
                    "hostPath": "./redis-data",
                    "containerPath": "/data",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ]
        },
        {
            "name": "zammad-scheduler",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-scheduler"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ],
            "dependsOn": {
                "zammad-memcached": {
                    "condition": "service_started"
                },
                "zammad-postgresql": {
                    "condition": "service_started"
                },
                "zammad-redis": {
                    "condition": "service_started"
                }
            }
        },
        {
            "name": "zammad-websocket",
            "image": "ghcr.io/zammad/zammad:6.5.0-101",
            "command": [
                "zammad-websocket"
            ],
            "environment": {
                "MEMCACHE_SERVERS": "zammad-memcached:11211",
                "POSTGRESQL_DB": "zammad_production",
                "POSTGRESQL_HOST": "zammad-postgresql",
                "POSTGRESQL_USER": "zammad",
                "POSTGRESQL_PASS": "zammad",
                "POSTGRESQL_PORT": "5432",
                "POSTGRESQL_OPTIONS": "?pool=50",
                "REDIS_URL": "redis://zammad-redis:6379",
                "BACKUP_DIR": "/var/tmp/zammad",
                "BACKUP_TIME": "03:00",
                "HOLD_DAYS": "10",
                "TZ": "Europe/Berlin",
                "ELASTICSEARCH_USER": "elastic",
                "ELASTICSEARCH_PASS": "zammad"
            },
            "volumes": [
                {
                    "hostPath": "./zammad-storage",
                    "containerPath": "/opt/zammad/storage",
                    "readOnly": false,
                    "shared": false,
                    "private": false
                }
            ],
            "dependsOn": {
                "zammad-memcached": {
                    "condition": "service_started"
                },
                "zammad-postgresql": {
                    "condition": "service_started"
                },
                "zammad-redis": {
                    "condition": "service_started"
                }
            }
        }
    ]
}
