{
  "services": [
    {
      "name": "app",
      "image": "loomio/loomio:stable",
      "internalPort": 3000,
      "isMain": true,
      "environment": {
        "VIRTUAL_HOST": "${APP_DOMAIN}",
        "LETSENCRYPT_HOST": "${APP_DOMAIN}",
        "USE_RACK_ATTACK": "1",
        "RACK_ATTACK_RATE_MULTPLIER": "1",
        "RACK_ATTACK_TIME_MULTPLIER": "1",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "loomio_production",
        "DATABASE_URL": "postgresql://postgres:password@db/loomio_production",
        "REDIS_URL": "redis://redis:6379/0",
        "ACTIVE_STORAGE_SERVICE": "local",
        "LOOMIO_SYSTEM_RELOAD": "1"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/uploads",
          "containerPath": "/loomio/public/system",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/storage",
          "containerPath": "/loomio/storage",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/files",
          "containerPath": "/loomio/public/files",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/plugins",
          "containerPath": "/loomio/plugins/docker",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/import",
          "containerPath": "/import",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/tmp",
          "containerPath": "/loomio/tmp",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "curl --fail http://localhost:3000/ || exit 1"
      },
      "dependsOn": {
        "db": {
          "condition": "service_started"
        },
        "redis": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "worker",
      "image": "loomio/loomio:stable",
      "environment": {
        "TASK": "worker",
        "USE_RACK_ATTACK": "1",
        "RACK_ATTACK_RATE_MULTPLIER": "1",
        "RACK_ATTACK_TIME_MULTPLIER": "1",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "loomio_production",
        "DATABASE_URL": "postgresql://postgres:password@db/loomio_production",
        "REDIS_URL": "redis://redis:6379/0",
        "ACTIVE_STORAGE_SERVICE": "local",
        "LOOMIO_SYSTEM_RELOAD": "1"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/uploads",
          "containerPath": "/loomio/public/system",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/storage",
          "containerPath": "/loomio/storage",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/files",
          "containerPath": "/loomio/public/files",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/plugins",
          "containerPath": "/loomio/plugins/docker",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/tmp",
          "containerPath": "/loomio/tmp",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    },
    {
      "name": "db",
      "image": "postgres:17",
      "environment": {
        "PGDATA": "/pgdata",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "loomio_production",
        "DATABASE_URL": "postgresql://postgres:password@db/loomio_production"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/pgdata",
          "containerPath": "/pgdata",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/pgdumps",
          "containerPath": "/pgdumps",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "CMD pg_isready -U postgres"
      }
    },
    {
      "name": "redis",
      "image": "redis:5.0",
      "healthCheck": {
        "test": "CMD redis-cli ping"
      }
    },
    {
      "name": "mailin",
      "image": "loomio/mailin-docker:latest",
      "environment": {
        "WEBHOOK_URL": "http://app:3000/email_processor/"
      },
      "internalPort": 25
    },
    {
      "name": "channels",
      "image": "loomio/loomio_channel_server",
      "environment": {
        "VIRTUAL_HOST": "channels.${APP_DOMAIN}",
        "LETSENCRYPT_HOST": "channels.${APP_DOMAIN}",
        "USE_RACK_ATTACK": "1",
        "RACK_ATTACK_RATE_MULTPLIER": "1",
        "RACK_ATTACK_TIME_MULTPLIER": "1",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "loomio_production",
        "DATABASE_URL": "postgresql://postgres:password@db/loomio_production",
        "REDIS_URL": "redis://redis:6379/0",
        "ACTIVE_STORAGE_SERVICE": "local",
        "LOOMIO_SYSTEM_RELOAD": "1"
      },
      "dependsOn": {
        "redis": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "hocuspocus",
      "image": "loomio/loomio_channel_server",
      "command": "npm run hocuspocus",
      "environment": {
        "APP_URL": "http://app:3000",
        "VIRTUAL_HOST": "hocuspocus.${APP_DOMAIN}",
        "LETSENCRYPT_HOST": "hocuspocus.${APP_DOMAIN}",
        "USE_RACK_ATTACK": "1",
        "RACK_ATTACK_RATE_MULTPLIER": "1",
        "RACK_ATTACK_TIME_MULTPLIER": "1",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_DB": "loomio_production",
        "DATABASE_URL": "postgresql://postgres:password@db/loomio_production",
        "REDIS_URL": "redis://redis:6379/0",
        "ACTIVE_STORAGE_SERVICE": "local",
        "LOOMIO_SYSTEM_RELOAD": "1"
      },
      "dependsOn": {
        "db": {
          "condition": "service_started"
        }
      }
    },
    {
      "name": "pgbackups",
      "image": "prodrigestivill/postgres-backup-local",
      "environment": {
        "POSTGRES_HOST": "db",
        "POSTGRES_DB": "loomio_production",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "password",
        "POSTGRES_EXTRA_OPTS": "-Z6 --schema",
        "SCHEDULE": "@daily",
        "BACKUP_KEEP_DAYS": "7",
        "BACKUP_KEEP_WEEKS": "1",
        "BACKUP_KEEP_MONTHS": "1",
        "HEALTHCHECK_PORT": "8080"
      },
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/pgdumps",
          "containerPath": "/backups",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "user": "postgres:postgres",
      "dependsOn": {
        "db": {
          "condition": "service_healthy"
        }
      }
    }
  ]
}